<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:weightSum="1">

    <ImageView
        android:id="@+id/story_thumbnail"
        android:layout_width="96dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/story_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:padding="@dimen/standard_padding"
        android:text="Title"
        android:textColor="@color/textColorTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/story_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/story_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_padding"
        android:text="Section"
        android:textColor="@color/textColorSecondaryText"
        app:layout_constraintTop_toBottomOf="@+id/story_title"
        app:layout_constraintLeft_toRightOf="@+id/story_thumbnail"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/story_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_padding"
        android:text="Authors"
        android:textColor="@color/textColorSecondaryText"
        app:layout_constraintTop_toBottomOf="@+id/story_section"
        app:layout_constraintLeft_toRightOf="@+id/story_thumbnail"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/story_date"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:padding="@dimen/standard_padding"
        android:text="Date"
        android:textColor="@color/textColorSecondaryText"
        app:layout_constraintLeft_toRightOf="@+id/story_section"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/story_title"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>